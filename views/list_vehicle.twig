    </section>
    <section class="formulario edit_vehicle">
        <div class="form_modal" id="form_modalEdit">
            <div class="modal" id="modalEdit">
                <form accept-charset="utf-8" action="listVehicle.html" class="action_modal" method="get">
                    <div class="title__form">
                        <h1 class="">Editar Vehículo</h1>
                    </div>
                    <div class="side__left">
                        <label for="placa">Ingresar placa
                            <input name="placa" placeholder="Ingresar placa" required type="text" value="">
                        </label>
                        <label for="marca">Ingresar modelo
                            <input autofocus name="modelo" placeholder="Ingresar modelo" required type="text" value="">
                        </label>
                        <label for="capacidad">Capacidad</label>
                        <input name="capacidad" placeholder="capacidad" required type="text">
                        <label for="consumo_galon">Consumo por galón</label>
                        <input name="consumo_galon" placeholder="consumo galon" required type="text">
                    </div>
                    <div class="side__right">
                        <label for="clase_bus">Clase bus</label>
                        <select id="clase_bus" name="clase_bus" required>
                            <option value="">--Seleccionar una opción--</option>
                            <option value="buseta">Buseta</option>
                            <option value="bus">Bus</option>
                            <option value="microbus">Micro bus</option>
                            <option value="busetaNPR">NPR</option>
                        </select>
                        <label for="ruta">Ruta</label>
                        <select id="ruta" name="ruta" required>
                            <option value="">--Seleccionar una opción--</option>
                            <option value="buga">Buga</option>
                            <option value="florida">Florida</option>
                            <option value="pradera">Pradera</option>
                            <option value="costa_rica">Costa rica</option>
                            <option value="candelario">Candelaria</option>
                        </select>
                        <label for="marcas">Marcas
                            <select id="marca" name="marca" required>
                                <option value="">--Seleccionar una opcion--</option>
                                <option value="chev">Chev</option>
                                <option value="ford">Ford</option>
                                <option value="stud">Stud</option>
                                <option value="daihat">Daihat</option>
                                <option value="merc">Merc</option>
                                <option value="dog">Dog</option>
                                <option value="hino">Hino</option>
                                <option value="NonPlusUltra">Non plus ultra</option>
                                <option value="nissa">Nissan</option>
                                <option value="novie">Novie</option>
                                <option value="iveco">Iveco</option>
                                <option value="volsk">Volsk</option>
                                <option value="tl">TL</option>
                                <option value="jac">JAC</option>
                            </select>
                        </label>
                        <label for="marcas">Carrocería
                            <select id="carroceria" name="carroceria" required>
                                <option value="">--Seleccionar una opción--</option>
                                <option value="carrado">Cerrado</option>
                                <option value="abierto">Abierto</option>
                                <option value="escalera">Escalera</option>
                            </select>
                        </label>
                    </div>
                    <div class="btn_form">
                        <button class="btn btn__add" id="hiden-add" target="_blank" type="submit" value="agregar">Guardar</button>
                        <button class="btn btn__close" id="hiden-cancel" type="submit" value="cencelar">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <section class="form_modal">
        <div class="moda__vehicle-remove">
            <div class="modal" id="modal-remove">
                <form accept-charset="utfclass=-8" action="listVehicle.html" class="form-remove" method="get">
                    <p class="modal__vehicle-parag">
                        ¿Esta seguro que desea eliminar el vehiculo?
                    </p>
                    <div class="btn_form">
                        <button class="btn btn__add" id="hiden-add" type="submit" value="agregar">Eliminar</button>
                        <button class="btn btn__close" id="remove-cancel" type="submit" value="cencelar">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

{% endblock %}
