{% extends "layout.twig" %}

{% block content %}
    <section class="info" id="info">
        <article class="departure">
            <div class="location">
                <h1 class="title__control">Control</h1>
            </div>
            <div class="date">
                <h1 class="title__date">Fecha</h1>
                <div class="info__date" id="info__date"></div>
            </div>
            <div class="time">
                <h1 class="title__time">Hora</h1>
                <div class="info__time" id="info__time"></div>
            </div>
        </article>
    </section>
    <section class="content">
        <div class="dataFilter">
            <form class="dataFilter-from">
                <div class="search-from">
                    <i class="search__icon icon-search "></i>
                    <input class=" from-search" name="search-label" type="search">
                </div>
            </form>
        </div>
        <div class="info__content">
            <table
                class="info__frame">
                <!-- tabla -->
                <thead>
                    <!-- cabecera -->
                    <tr>
                        <!-- fila -->
                        <th>Numero interno</th>
                        <th>Placa</th>
                        <th>Marca</th>
                        <th>Ruta</th>
                        <th>Capacidad</th>
                        <th>Carroceria</th>
                        <th>Tipo bus</th>
                        <th>Consumo</th>
                        <th>Activo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                {% for vehiculo in vehiculos %}
                    <tbody>
                        <!-- cuerpo -->
                        <tr>
                            <td>{{vehiculo.numero_interno}}</td>
                            <td>{{vehiculo.placa_vehiculo}}</td>
                            <td>{{vehiculo.marca.nombre}}</td>
                            <td>{{vehiculo.ruta}}</td>
                            <td>{{vehiculo.capacidad}}
                                Personas</td>
                            <td>{{vehiculo.carroceria}}</td>
                            <td>{{vehiculo.clase_bus}}</td>
                            <td>{{vehiculo.consumo_galon}}
                                Galones</td>
                            <td>
                                <form accept-charset="utf-8" action="listVehicle_submit" class="onoffswitch__form" method="get">
                                    <div class="onoffswitch">
                                            <input checked {{vehiculo.vehiculo_id}} class="onoffswitch-checkbox" id="myonoffswitch" name="onoffswitch" type="checkbox">
                                        {% if vehiculo.activo %}
                                            <label class="onoffswitch-label" for="myonoffswitch">
                                                <span class="onoffswitch-inner"></span>
                                                <span class="onoffswitch-switch"></span>
                                            {% endif %}
                                        </label>
                                    </div>
                                </form>
                            </td>
                            <td>
                                <div class="acciones_icon">
                                    <i class="edit__bus icon-pencil"></i>
                                    <i class="delete__bus icon-bin"></i>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
        <div class="dataTable_paginate">
            <ul class="pagination">
                <li class="paginate_button page-item">
                    <a class="page_link" href="#">Anterior</a>
                </li>
                <li class="paginate_button page-item">
                    <a class="page_link" href="#">1</a>
                </li>
                <li class="paginate_button page-item">
                    <a class="page_link" href="#">2</a>
                </li>
                <li class="paginate_button page-item">
                    <a class="page_link" href="#">3</a>
                </li>
                <li class="paginate_button page-item">
                    <a class="page_link" href="#">Siguiente</a>
                </li>
            </ul>
        </div>


