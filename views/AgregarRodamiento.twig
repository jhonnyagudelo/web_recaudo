{% extends "layout.twig" %}
{% block title %}| Agregar Rodamiento
{% endblock %}
{% block content %}

    <section class="content">
        <div class="rodamiento_add">
            <div class="icon_title">
                <i class="icon-road icon-title "></i>
                <h1 class="main_title">Rodamientos</h1>
            </div>
            <div class="sub_title">
                <h2 class="title_sub">Registrar rodamiento</h2>
            </div>
            <div>
                <h2 class="info_general">Informacion general</h2>
                <div class="form_general-content from_road">
                    <form accept-charset="utf-8" action="/web-coodetrans/rodamiento/add" enctype="multipart/form-data" method="post">
                        <label class="" id="planilla">
                            Planilla:
                            <input class=" input-rodamiento" min="1" name="planilla" type="number" value=""></label>
                        <label class="">Control:
                            <select name="control" required>
                                <option value="">Seleccione:</option>
                                {% for control in controles %}
                                    <option value={{control.control_id}}>{{control.nombre}}</option>
                                {% endfor %}
                            </select>
                        </label>
                        <label class="">
                            Vehiculo:
                            <input list="vehiculo" name="vehiculo" required type="search">
                            <datalist id="vehiculo">
                                {% for vehiculo in vehiculos %}
                                    <option value={{vehiculo.vehiculo_id|e}}>{{vehiculo.numero_interno|e}}</option>
                                {% endfor %}
                            </datalist>
                        </label>
                        <label>Recibo
                            <input class="imgRecibo" name="imagen" type="file"></input>
                    </label>
                    <div class="div_btn">
                        <input class="btn-save" id="save" name="" type="submit" value="Guardar">
                    </div>
                    <div class="alert">
                        {{respuestaMensaje}}
                        {# <p>hello</p> #}
                    </div>
                </form>
            </div>
        </div>
    </section>

{% endblock %}
